<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="GPA Calculator - Add Courses" />
    <Label fx:id="totalCreditsLabel" text="Total Credits: 0/12" />

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Course Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="courseNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Course Code:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="courseCodeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Course Credit:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="courseCreditField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Teacher 1 Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="teacher1Field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Teacher 2 Name:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="teacher2Field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Grade:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <ComboBox fx:id="gradeComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <HBox alignment="CENTER" spacing="20.0">
        <Button mnemonicParsing="false" onAction="#addCourse" text="Add Course" />
        <Button mnemonicParsing="false" onAction="#calculateGPA" text="Calculate GPA" />
    </HBox>

    <Label text="Added Courses:" />
    <TextArea fx:id="courseListArea" editable="false" prefHeight="150.0" />
</VBox>