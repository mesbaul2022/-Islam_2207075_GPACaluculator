<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java2.HelloController">

    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="Add Course Information">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <Separator prefWidth="200.0" />
        </VBox>
    </top>

    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>

            <GridPane hgap="10.0" vgap="15.0">
                <Label text="Course Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="courseNameField" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Course Code:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="courseCodeField" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Credit Hours:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="creditField" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Teacher 1 Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="teacher1Field" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Teacher 2 Name:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="teacher2Field" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Grade:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <ComboBox fx:id="gradeCombo" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </GridPane>

            <HBox alignment="CENTER" spacing="20.0">
                <Button onAction="#addCourse" text="Add Course">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
            </HBox>

            <Separator prefWidth="200.0" />

            <Label text="Added Courses:">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextArea fx:id="coursesDisplayArea" editable="false" prefHeight="150.0" wrapText="true" />

            <Label fx:id="totalCreditsLabel" text="Total Credits: 0 / 12">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>

            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="calculateButton" onAction="#calculateGPA" text="Calculate GPA">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>