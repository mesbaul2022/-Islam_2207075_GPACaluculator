<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java2.HelloController">

    <top>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
            </padding>
            <Label text="GPA Calculation Result">
                <font>
                    <Font size="26.0" />
                </font>
            </Label>
            <Separator prefWidth="300.0" />
            <Label text="Your Final GPA">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <Label fx:id="gpaLabel" text="0.00">
                <font>
                    <Font size="48.0" />
                </font>
            </Label>
            <Separator prefWidth="300.0" />
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="20.0" />
            </padding>

            <Label text="Course Details:">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>

            <TextArea fx:id="resultArea" editable="false" prefHeight="300.0" wrapText="true">
                <font>
                    <Font name="Monospaced Regular" size="12.0" />
                </font>
            </TextArea>
        </VBox>
    </center>
</BorderPane>